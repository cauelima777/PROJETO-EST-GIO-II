@page
@model projeto_Idosos.Pages.IndexModel
@{
    ViewData["Title"] = "Bem-vindo à ProVida";
    Layout = null; // Usamos layout próprio com HTML completo
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Plataforma ProVida para auxílio à terceira idade." />
    <title>@ViewData["Title"]</title>

    <!-- Ícone -->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />

    <!-- Font Awesome -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" />

    <!-- CSS do Bootstrap e tema -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="#page-top"><img src="assets/img/navbar-logo.svg" alt="Logo ProVida" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive">
                Menu <i class="fas fa-bars ms-1"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
                    <li class="nav-item"><a class="nav-link" href="#servicos">Nossos serviços</a></li>
                    <li class="nav-item"><a class="nav-link" href="#team">Equipe</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">Contato</a></li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light btn-sm ms-3" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- MASTHEAD -->
    <header class="masthead">
        <div class="container text-center">
            <div class="masthead-subheading">Fazendo a vida do idoso melhor.</div>
            <div class="masthead-heading text-uppercase">ProVida</div>
            <a class="btn btn-primary btn-xl text-uppercase" asp-area="Identity" asp-page="/Account/Login">Entrar agora</a>
        </div>
    </header>

    <!-- SERVIÇOS -->
    <section class="page-section bg-light" id="servicos">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Nossos serviços</h2>
                <h3 class="section-subheading text-muted">O que oferecemos para melhorar o seu dia a dia.</h3>
            </div>
            <div class="row">
                <div class="col-lg-4 col-sm-6 mb-4">
                    <div class="servicos-item">
                        <a class="servicos-link" href="/Visitante/Gestao&saude/GestaoEsaude">
                            <div class="servicos-hover"><i class="fas fa-plus fa-3x"></i></div>
                            <img class="img-fluid" src="assets/img/portfolio/gestão&saude.jpg" alt="Gestão de Saúde" />
                        </a>
                        <div class="servicos-caption">
                            <div class="servicos-caption-heading">Gestão de Saúde</div>
                            <div class="servicos-caption-subheading text-muted">Consultas, exames e tratamentos.</div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-sm-6 mb-4">
                    <div class="servicos-item">
                        <a class="servicos-link" href="#">
                            <div class="servicos-hover"><i class="fas fa-plus fa-3x"></i></div>
                            <img class="img-fluid" src="assets/img/portfolio/ImagemMedicamentos.jpg" alt="Lembretes de Medicação" />
                        </a>
                        <div class="servicos-caption">
                            <div class="servicos-caption-heading">Lembretes de Medicação</div>
                            <div class="servicos-caption-subheading text-muted">Alertas para tomar seus remédios corretamente.</div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-sm-6 mb-4">
                    <div class="servicos-item">
                        <a class="servicos-link" href="#">
                            <div class="servicos-hover"><i class="fas fa-plus fa-3x"></i></div>
                            <img class="img-fluid" src="assets/img/portfolio/ExercicioIdoso.jpg" alt="Exercícios e Mobilidade" />
                        </a>
                        <div class="servicos-caption">
                            <div class="servicos-caption-heading">Exercícios e Mobilidade</div>
                            <div class="servicos-caption-subheading text-muted">Atividades físicas seguras e adaptadas.</div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-sm-6 mb-4">
                    <div class="servicos-item">
                        <a class="servicos-link" href="#">
                            <div class="servicos-hover"><i class="fas fa-plus fa-3x"></i></div>
                            <img class="img-fluid" src="assets/img/portfolio/AdminTempo.jpg" alt="Administração de Tempo" />
                        </a>
                        <div class="servicos-caption">
                            <div class="servicos-caption-heading">Administração de Tempo</div>
                            <div class="servicos-caption-subheading text-muted">Organize sua rotina com praticidade.</div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-sm-6 mb-4">
                    <div class="servicos-item">
                        <a class="servicos-link" href="#">
                            <div class="servicos-hover"><i class="fas fa-plus fa-3x"></i></div>
                            <img class="img-fluid" src="assets/img/portfolio/EstatutoIdoso.jpg" alt="Direitos do Idoso" />
                        </a>
                        <div class="servicos-caption">
                            <div class="servicos-caption-heading">Educação sobre Direitos</div>
                            <div class="servicos-caption-subheading text-muted">Conheça seus direitos garantidos por lei.</div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-sm-6 mb-4">
                    <div class="servicos-item">
                        <a class="servicos-link" href="#">
                            <div class="servicos-hover"><i class="fas fa-plus fa-3x"></i></div>
                            <img class="img-fluid" src="assets/img/portfolio/ComunicarIdoso.jpg" alt="Suporte a Cuidadores" />
                        </a>
                        <div class="servicos-caption">
                            <div class="servicos-caption-heading">Suporte a Cuidadores</div>
                            <div class="servicos-caption-subheading text-muted">Facilite a comunicação e organização do cuidado.</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer py-4 bg-dark text-white">
        <div class="container text-center">
            <small>© @DateTime.Now.Year ProVida. Todos os direitos reservados.</small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
