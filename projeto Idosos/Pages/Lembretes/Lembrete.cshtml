@page
@model projeto_Idosos.Pages.Lembretes.LembreteModel
@{
    ViewData["Title"] = "Lembretes";
}

<nav class="custom-navbar">
    <div class="container">
        <a class="logo" href="#">ProVida</a>
        <ul class="nav-links">
            <li><a href="#servicos">NOSSOS SERVIÇOS</a></li>
            <li><a href="#team">TEAM</a></li>
            <li><a href="#contact">CONTATE-NOS</a></li>
        </ul>
    </div>
</nav>

<div class="container text-center mt-4">
    <a href="javascript:history.back()" class="btn btn-outline-secondary mb-4">← Voltar</a>
</div>

<div class="container">
    <div class="servicos-caption text-center mb-5 p-4 shadow-sm bg-light rounded">
        <div class="servicos-caption-heading">@Model.Titulo</div>
        <div class="servicos-caption-subheading text-muted">@Model.Descricao</div>
    </div>

    <div class="lembretes-section mb-5">
        <h3 class="mb-4 text-primary border-bottom pb-2">Lista de Lembretes de Medicação</h3>
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var lembrete in Model.LembretesUsuario)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-4">
                        <div class="card-body">
                            <h5 class="card-title text-success">@lembrete.NomeRemedio</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Horário: @lembrete.Hora</h6>
                            <p class="card-text">@lembrete.Descricao</p>

                            <form method="post" asp-page-handler="Excluir" asp-route-id="@lembrete.Id">
                                <button type="submit" class="btn btn-danger btn-sm mt-2">Excluir</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
}

<style>
    .servicos-caption {
        margin-top: 50px;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .servicos-caption-heading {
        font-size: 2rem;
        font-weight: bold;
        color: #343a40;
    }

    .servicos-caption-subheading {
        font-size: 1.2rem;
        color: #6c757d;
    }

    .container {
        margin-top: 30px;
    }

    .custom-navbar {
        background-color: #2c4b4b;
        padding: 15px 0;
        font-family: 'Segoe UI', sans-serif;
    }

        .custom-navbar .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

    .logo {
        font-weight: bold;
        color: #ffc107;
        text-decoration: none;
        font-style: italic;
        font-size: 1.2rem;
    }

    .nav-links {
        list-style: none;
        display: flex;
        gap: 30px;
        margin: 0;
        padding: 0;
    }

        .nav-links a {
            text-decoration: none;
            text-transform: uppercase;
            font-size: 0.9rem;
            color: white;
            transition: color 0.3s ease;
        }

            .nav-links a:hover {
                color: #ffc107;
            }

    .lembretes-section {
        margin-bottom: 50px;
    }

    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02);
        }

    .card-title {
        font-size: 1.25rem;
    }

    .card-subtitle {
        font-size: 0.95rem;
    }

    h3 {
        font-weight: 600;
        color: #2c4b4b;
    }
</style>
