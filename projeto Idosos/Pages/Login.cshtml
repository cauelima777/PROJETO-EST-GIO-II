@page
@model projeto_Idosos.Pages.LoginModel
@{
}
<body id="telaLogin">
    <section class="vh-100">
        <div class="mask d-flex align-items-center h-100">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card-cad" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center uppercaseUser mb-4">Login</h2>

                                <form method="post">

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label for="Email" class="form-label"></label>
                                        <input type="email" id="email" name="email" placeholder="Insira seu email" class="form-control form-control-lg" />
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label for="Senha" class="form-label"></label>
                                        <input type="password" id="senha" name="senha" placeholder="Insira sua senha" class="form-control form-control-lg" />
                                    </div>

                                    <div class="row mb-4 d-flex justify-content-between">
                                        <div class="col d-flex align-items-center">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" id="checkLembrarDeMim" />
                                                <label class="form-check-label" for="checkLembrarDeMim"> Lembrar de mim </label>
                                            </div>
                                        </div>

                                        <div class="col d-flex align-items-center justify-content-end">
                                            <a href="#!">Esqueceu a senha?</a>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <button type="submit" id="btnGeral"
                                                class="btn btn-block btn-lg text-body">
                                            Entrar
                                        </button>
                                    </div>
                                </form>

                                <div class="text-center mt-3">
                                    <span class="span-cadastro">Não tem uma conta?</span>
                                    <a href="Cadastro" class="link-geral">Cadastre-se</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>