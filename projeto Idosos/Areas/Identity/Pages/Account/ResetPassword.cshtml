@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir senha";
}

<body id="telaLogin">
    <section class="vh-100">
        <div class="mask d-flex align-items-center h-100">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card-cad" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center uppercaseUser mb-4">Redefinir senha</h2>

                                <form method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <input asp-for="Input.Code" type="hidden" />

                                    <div class="form-outline mb-4">
                                        <label asp-for="Input.Email" class="form-label"></label>
                                        <input asp-for="Input.Email" class="form-control form-control-lg" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label asp-for="Input.Password" class="form-label"></label>
                                        <input asp-for="Input.Password" class="form-control form-control-lg" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btn btn-block btn-lg text-body" id="btnGeral">
                                            Redefinir senha
                                        </button>
                                    </div>
                                </form>

                                <div class="text-center mt-3">
                                    <a asp-page="./Login" class="link-geral">← Voltar para o login</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
